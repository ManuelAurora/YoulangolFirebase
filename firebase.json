{
  "functions": [
    {
      "source": "functions"
    }
  ],
  "database": {
    "rules": "database.rules.json"
  },
  "firestore": {
    "rules": "firestore.rules",
    "indexes": "firestore.indexes.json"
  },
  "hosting": {
    "public": "public",
    "ignore": [
      "firebase.json",
      "**/.*",
      "**/node_modules/**"
    ],
    "rewrites": [
      {
        "source": "**",
        "function": "app"
      },
      {
        "source": "/verify-email",
        "function": "verifyEmail"
      }
    ]
  },
  "emulators": {
    "functions": {
      "port": 5005
    },
    "firestore": {
      "port": 5002
    },
    "auth": {
      "port": 9099
    }
  }
}
